<Manager>:
    Menu:
        name: 'menu'
    Price:
        name: 'price'
    Convert:
        name: 'convert'

<Menu>:
    BoxLayout:
        orientation: 'vertical'
        padding: 100
        spacing: 10
        Button:
            text: 'Price'
            on_release: app.root.current = 'price'
        Button:
            text: 'Convert'
            on_release: app.root.current = 'convert'

<Price>:
    BoxLayout:
        orientation: 'vertical'
        padding: 100
        spacing: 10
        Label:
            text: "Moeda : "
            id: lbl_coin
        Label:
            text: "Data : "
            id: lbl_date
        Label:
            text: "Valor : "
            id: lbl_value
        Label:
            text: "Digite a sigla da moeda que deseja ver:"
        TextInput:
            multiline: False
            id: name_coin
        Button:
            text: 'Mostrar'
            on_press: root.press()
        Button:
            text: 'Voltar'
            on_press: app.root.current = 'menu'



<Convert>:
    BoxLayout:
        orientation: 'vertical'
        padding: 100
        spacing: 10
        Label:
            text: 'Digite a sigla da moeda e o valor do qual deseja converter para Real'
        TextInput:
            multiline: False
            id: name_coin
        TextInput:
            multiline: False
            id: value_coin
        Button:
            text:'Converter'
            on_press: root.convert()
        Label:
            text:''
            id: convert_value
        Button:
            text:'voltar'
            on_press: app.root.current = 'menu'